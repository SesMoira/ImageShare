@model IEnumerable<ImageShare.Models.MetadataDb>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaptureBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapturedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.File)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaptureBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapturedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.File.FileId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MetadataId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MetadataId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MetadataId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
